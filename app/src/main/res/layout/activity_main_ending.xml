<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="vertical"
	android:background="#ffffff">

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="55dp"
		android:orientation="vertical"
		android:background="#000000"
		>


		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="驾驶行为分析"
			android:layout_marginTop="15dp"
			android:layout_gravity="center"
			android:textSize="22sp"
			android:textColor="#ffffff"/>

	</LinearLayout>


	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_centerHorizontal="true"
		android:layout_marginTop="40dp"
		android:layout_marginLeft="30dp"
		android:orientation="horizontal">

		<TextView
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:layout_weight="1.2"
			android:text="当前驾驶模式："
			android:textSize="25sp"
			android:textColor="#FA7F05"
			/>

		<TextView
			android:id="@+id/tv_mode"
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:layout_weight="1"
			android:textSize="25sp"
			android:textColor="#FA7F05"
			/>
	</LinearLayout>

	<TableLayout
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:stretchColumns="2"
		android:layout_marginTop="40dp">

		<TableRow
			android:id="@+id/row1">
			<TextView
				android:layout_width="0dp"
				android:layout_height="wrap_content"
				android:layout_weight="1"
				android:textSize="22dp"
				android:paddingLeft="60dp"
				android:text="行驶时间："
				android:textColor="#000000"/>
			<TextView
				android:layout_width="0dp"
				android:layout_height="wrap_content"
				android:layout_weight="1"
				android:textSize="22dp"

				android:id="@+id/tv_time"
				android:textColor="#000000"/>
		</TableRow>

		<TableRow
			android:id="@+id/row2">
			<TextView
				android:layout_width="0dp"
				android:layout_height="wrap_content"
				android:layout_weight="2"
				android:textSize="22dp"
				android:paddingLeft="60dp"
				android:text="左转："
				android:textColor="#000000"/>
			<TextView
				android:layout_width="0dp"
				android:layout_height="wrap_content"
				android:layout_weight="1"
				android:textSize="22dp"
				android:paddingLeft="30dp"
				android:id="@+id/tv_tl"
				android:textColor="#000000"/>
			<TextView
				android:layout_width="0dp"
				android:layout_height="wrap_content"
				android:layout_weight="1"
				android:textSize="22dp"
				android:paddingLeft="0dp"
				android:text="次"
				android:textColor="#000000"/>
		</TableRow>

		<TableRow
			android:id="@+id/row3">
			<TextView
				android:layout_width="0dp"
				android:layout_height="wrap_content"
				android:layout_weight="2"
				android:textSize="22dp"
				android:paddingLeft="60dp"
				android:text="右转："
				android:textColor="#000000"/>
			<TextView
				android:layout_width="0dp"
				android:layout_height="wrap_content"
				android:layout_weight="1"
				android:textSize="22dp"
				android:paddingLeft="30dp"
				android:id="@+id/tv_tr"
				android:textColor="#000000"/>
			<TextView
				android:layout_width="0dp"
				android:layout_height="wrap_content"
				android:layout_weight="1"
				android:textSize="22dp"
				android:paddingLeft="0dp"
				android:text="次"
				android:textColor="#000000"/>
		</TableRow>

		<TableRow
			android:id="@+id/row4">
			<TextView
				android:layout_width="0dp"
				android:layout_height="wrap_content"
				android:layout_weight="2"
				android:textSize="22dp"
				android:paddingLeft="60dp"
				android:text="调头："
				android:textColor="#000000"/>
			<TextView
				android:layout_width="0dp"
				android:layout_height="wrap_content"
				android:layout_weight="1"
				android:textSize="22dp"
				android:paddingLeft="30dp"
				android:id="@+id/tv_U"
				android:textColor="#000000"/>
			<TextView
				android:layout_width="0dp"
				android:layout_height="wrap_content"
				android:layout_weight="1"
				android:textSize="22dp"
				android:paddingLeft="0dp"
				android:text="次"
				android:textColor="#000000"/>
		</TableRow>

		<TableRow
			android:id="@+id/row5">
			<TextView
				android:layout_width="0dp"
				android:layout_height="wrap_content"
				android:layout_weight="2"
				android:textSize="22dp"
				android:paddingLeft="60dp"
				android:text="向左变道："
				android:textColor="#000000"/>
			<TextView
				android:layout_width="0dp"
				android:layout_height="wrap_content"
				android:layout_weight="1"
				android:textSize="22dp"
				android:paddingLeft="30dp"
				android:id="@+id/tv_ctl"
				android:textColor="#000000"/>
			<TextView
				android:layout_width="0dp"
				android:layout_height="wrap_content"
				android:layout_weight="1"
				android:textSize="22dp"
				android:paddingLeft="0dp"
				android:text="次"
				android:textColor="#000000"/>
		</TableRow>

		<TableRow
			android:id="@+id/row6">
			<TextView
				android:layout_width="0dp"
				android:layout_height="wrap_content"
				android:layout_weight="2"
				android:textSize="22dp"
				android:paddingLeft="60dp"
				android:text="向右变道："
				android:textColor="#000000"/>
			<TextView
				android:layout_width="0dp"
				android:layout_height="wrap_content"
				android:layout_weight="1"
				android:textSize="22dp"
				android:paddingLeft="30dp"
				android:id="@+id/tv_ctr"
				android:textColor="#000000"/>
			<TextView
				android:layout_width="0dp"
				android:layout_height="wrap_content"
				android:layout_weight="1"
				android:textSize="22dp"
				android:paddingLeft="0dp"
				android:text="次"
				android:textColor="#000000"/>
		</TableRow>

		<TableRow
			android:id="@+id/row7">
			<TextView
				android:layout_width="0dp"
				android:layout_height="wrap_content"
				android:layout_weight="2"
				android:textSize="22dp"
				android:paddingLeft="60dp"
				android:text="刹车："
				android:textColor="#000000"/>
			<TextView
				android:layout_width="0dp"
				android:layout_height="wrap_content"
				android:layout_weight="1"
				android:textSize="22dp"
				android:paddingLeft="30dp"
				android:id="@+id/tv_brake"
				android:textColor="#000000"/>
			<TextView
				android:layout_width="0dp"
				android:layout_height="wrap_content"
				android:layout_weight="1"
				android:textSize="22dp"
				android:paddingLeft="0dp"
				android:text="次"
				android:textColor="#000000"/>
		</TableRow>

		<TableRow
			android:id="@+id/row8">
			<TextView
				android:layout_width="0dp"
				android:layout_height="wrap_content"
				android:layout_weight="2"
				android:textSize="22dp"
				android:paddingLeft="60dp"
				android:text="急刹车："
				android:textColor="#000000"/>
			<TextView
				android:layout_width="0dp"
				android:layout_height="wrap_content"
				android:layout_weight="1"
				android:textSize="22dp"
				android:paddingLeft="30dp"
				android:id="@+id/tv_brake_high"
				android:textColor="#000000"/>
			<TextView
				android:layout_width="0dp"
				android:layout_height="wrap_content"
				android:layout_weight="1"
				android:textSize="22dp"
				android:paddingLeft="0dp"
				android:text="次"
				android:textColor="#000000"/>
		</TableRow>



		<TableRow
			android:id="@+id/row9">
			<TextView
				android:layout_width="0dp"
				android:layout_height="wrap_content"
				android:layout_weight="3"
				android:textSize="22dp"
				android:paddingLeft="60dp"
				android:text="危险驾驶比例："
				android:textColor="#000000"/>
			<TextView
				android:layout_width="0dp"
				android:layout_height="wrap_content"
				android:layout_weight="1"
				android:textSize="22dp"
				android:paddingLeft="0dp"
				android:id="@+id/per"
				android:textColor="#000000"/>
			<TextView
				android:layout_width="0dp"
				android:layout_height="wrap_content"
				android:layout_weight="1.2"
				android:textSize="22dp"
				android:paddingLeft="0dp"
				android:text="%"
				android:textColor="#000000"/>
		</TableRow>


	</TableLayout>

