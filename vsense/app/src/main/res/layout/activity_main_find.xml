<?xml version="1.0" encoding="utf-8"?>
<AbsoluteLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent"
	>
<!-- 定义一个文本框，使用绝对定位 -->
<TextView 
	android:layout_x="20dip"
	android:layout_y="20dip"
	android:layout_width="wrap_content" 
	android:layout_height="wrap_content"
	android:textSize="50px" 
	android:text="昵    称："
	/>
<!-- 定义一个文本编辑框，使用绝对定位 -->
<EditText 
	android:layout_x="140dip"
	android:layout_y="15dip"
	android:layout_width="wrap_content" 
	android:width="400px" 
	android:layout_height="wrap_content" 
	android:hint="请输入昵称"
	/>
<!-- 定义一个文本框，使用绝对定位 -->	
<TextView 
	android:layout_x="20dip"
	android:layout_y="80dip"
	android:layout_width="wrap_content" 
	android:layout_height="wrap_content" 
	android:textSize="50px"
	android:text="新密码："
	/>
<!-- 定义一个文本编辑框，使用绝对定位 -->	
<EditText 
	android:layout_x="140dip"
	android:layout_y="75dip"
	android:layout_width="wrap_content" 
	android:width="400px" 
	android:layout_height="wrap_content" 
	android:password="true"
	android:hint="请输入密码"
	/>

<TextView 
	android:layout_x="20dip"
	android:layout_y="140dip"
	android:layout_width="wrap_content" 
	android:layout_height="wrap_content" 
	android:textSize="50px"
	android:text="重复密码："
	/>
<!-- 定义一个文本编辑框，使用绝对定位 -->	
<EditText 
	android:layout_x="140dip"
	android:layout_y="135dip"
	android:layout_width="wrap_content" 
	android:width="400px" 
	android:layout_height="wrap_content" 
	android:password="true"
	android:hint="请重复刚才输入的密码"
	/>

<!-- 定义一个按钮，使用绝对定位 -->
<Button 
	android:layout_x="5dip"
	android:layout_y="200dip"
	android:id="@+id/fin" 
	android:textColor="#FFFFFF"
	android:textSize="30sp"
	android:layout_gravity="center_horizontal"
	android:layout_width="350dp"
	android:layout_height="40dp"
	android:background="@drawable/angry_btn"
	android:shadowColor="#A8A8A8"
	android:shadowDx="0"
	android:shadowDy="0"
	android:shadowRadius="5" 
	android:text="找    回"
	/>	
	




</AbsoluteLayout>
